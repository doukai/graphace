<script lang="ts">
	import { melt } from '@melt-ui/svelte';
	import { Icon } from '@steeze-ui/svelte-icon';
	import { Funnel } from '@steeze-ui/heroicons';
	import { hasArguments } from '@graphace/graphql';
	import {{ name }}Filter from '~/{{ componentsPath }}/objects/{{ name | paramCase }}/{{ name }}Filter.svelte';
	import type { {{ name }}Expression } from '~/{{ schemaTypesPath }}';

	export let name: string;
	export let value: {{ name }}Expression | null | undefined = undefined;
	let className: string | undefined = '';
	export { className as class };

	$: filtered = value && hasArguments(value);
</script>

<{{ name }}Filter bind:value let:trigger on:filter>
	<td class={className}>
		<a class="link group inline-flex truncate" href={null} use:melt={trigger}>
			{name}
			{#if filtered}
				<span class="flex-none">
					<Icon src={Funnel} class="h-5 w-5" />
				</span>
			{/if}
		</a>
	</td>
</{{ name }}Filter>