<script lang="ts">
	import type { Errors } from '@graphace/commons';
	import { Card } from '@graphace/ui';
	import {{ name }}Grid from '~/{{ gridPath }}/{{ name | paramCase }}/{{ name }}Grid.svelte';
	import {{ name }}AggGrid from '~/{{ gridPath }}/{{ name | paramCase }}/{{ name }}AggGrid.svelte';
	import type { {{ name }}ConnectionQueryStore } from '~/{{ storesPath }}/{{ name | paramCase }}/{{ name | camelCase }}QueryStore';
	import type { {{ name }}ListMutationStore } from '~/{{ storesPath }}/{{ name | paramCase }}/{{ name | camelCase }}MutationStore';
	import type { PageData } from './$houdini';
	import { validate } from '~/utils';
	import { locale } from '$i18n/i18n-svelte';

	export let data: PageData;
	let errors: Record<number, Errors> = {};

	const {
		fields,
		queryArguments,
		showHeader,
		showFooter,
		showOptionButton,
		showFilterButton,
		showBookmarkButton
	} = data;

	const {{ name }}ConnectionQuery = data.{{ name }}Query as {{ name }}ConnectionQueryStore;
	const {{ name }}ListMutation = data.{{ name }}Query as {{ name }}ListMutationStore;

	const components: Record<string, any> = {
		mutation: {{ name }}Grid,
		agg: {{ name }}AggGrid
	};

	const component = components[data.type];
</script>

<Card>
	<svelte:component
		this={component}
		isFetching={${{ name }}ConnectionQuery.isFetching}
		connection={${{ name }}ConnectionQuery.response.data?.{{ name | camelCase }}Connection}
		{fields}
		{queryArguments}
		{showHeader}
		{showFooter}
		{showOptionButton}
		{showFilterButton}
		{showBookmarkButton}
		on:query={(e) => {
			errors = {};
			{{ name }}ConnectionQuery.fetch(e.detail.fields, e.detail.queryArguments);
		}}
		on:mutation={(e) => {
			validate('Mutation_{{ name | camelCase }}List_Arguments', e.detail.mutationArguments, $locale)
				.then((data) => {
					errors = {};
					{{ name }}ListMutation.fetch(e.detail.fields, e.detail.mutationArguments).then((response) => {
						if (response?.errors) {
							e.detail.catch(response.errors);
						} else {
							e.detail.then(response?.data?.{{ name | camelCase }}List);
						}
					});
				})
				.catch((validErrors) => {
					errors = validErrors.list.iterms;
				});
		}}
	/>
</Card>
