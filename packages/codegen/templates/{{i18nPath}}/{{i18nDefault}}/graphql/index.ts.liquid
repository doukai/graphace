import type { BaseTranslation } from '../../i18n-types';

const {{ lang }}: BaseTranslation = {
{%- if objects %}
	objects: {
{%- for object in objects %}
		{{ object.name }}: {
			name: '{%- if lang == i18nDescription -%}{{ object.description }}{%- else -%}{{ object.name }}{%- endif -%}',
			fields: {
{%- for field in object.fields %}
				{{ field.name }}: {
					name: '{%- if lang == i18nDescription -%}{{ field.description }}{%- else -%}{{ field.name }}{%- endif -%}',
				}{%- if forloop.last == false -%},{%- endif %}
{%- endfor %}
			}
		}{%- if forloop.last == false -%},{%- endif %}
{%- endfor %}
	},
{%- endif %}
{%- if enums %}
	enums: {
{%- for enum in enums %}
		{{ enum.name }}: {
			name: '{%- if lang == i18nDescription -%}{{ enum.description }}{%- else -%}{{ enum.name }}{%- endif -%}',
			values: {
{%- for value in enum.values %}
				{{ value.name }}: {
					name: '{%- if lang == i18nDescription -%}{{ value.description }}{%- else -%}{{ value.name }}{%- endif -%}',
				}{%- if forloop.last == false -%},{%- endif %}
{%- endfor %}
			}
		}{%- if forloop.last == false -%},{%- endif %}
{%- endfor %}
	}
{%- endif %}
}

export default {{ lang }};